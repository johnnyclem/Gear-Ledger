<% title "Packages" %>
<ul class="menu_tabbed"> 
	<li><%= link_to "Check-In" %></li> 
	<li><%= link_to "Check-Out"%> </li> 
	<li><%= link_to "Items", items_path %></li> 
	<li><%= link_to "Packages", {:controller => 'packages', :action => 'index'}, :class => 'selected' %></li> 
	</ul>
<table>
  <tr>
    <th>Name</th>
    <th>Checked Out By</th>
  </tr>
  <% for package in @packages %>
    <tr>
      <td><%= package.name %></td>
      <td><%= package.checked_out_by %></td>
      <td><%= link_to "Show", package %></td>
      <td><%= link_to "Edit", edit_package_path(package) %></td>
      <td><%= link_to "Destroy", package, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Package", new_package_path %></p>
