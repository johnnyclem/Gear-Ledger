<% title "Packages" %>

<table>
  <tr>
    <th>Name</th>
    <th>Make</th>
    <th>Model</th>
    <th>Barcode</th>
    <th>Serial</th>
    <th>Checked Out By</th>
    <th>Price</th>
    <th>Condition</th>
    <th>Last Serviced</th>
    <th>Next Service</th>
  </tr>
  <% for package in @packages %>
    <tr>
      <td><%= package.name %></td>
      <td><%= package.make %></td>
      <td><%= package.model %></td>
      <td><%= package.barcode %></td>
      <td><%= package.serial %></td>
      <td><%= package.checked_out_by %></td>
      <td><%= package.price %></td>
      <td><%= package.condition %></td>
      <td><%= package.last_serviced %></td>
      <td><%= package.next_service %></td>
      <td><%= link_to "Show", package %></td>
      <td><%= link_to "Edit", edit_package_path(package) %></td>
      <td><%= link_to "Destroy", package, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Package", new_package_path %></p>
