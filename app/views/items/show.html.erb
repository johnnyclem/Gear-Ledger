<ul class="menu_tabbed"> 
	<li><%= link_to "Check-In" %></li> 
	<li><%= link_to "Check-Out"%> </li> 
	<li><%= link_to "Items", {:controller => 'items', :action => 'index'}, :class => 'selected' %></li> 
	<li><%= link_to "Packages", packages_path %></li> 
	</ul>
<% title @item.name %>

<%= image_tag @item.photo.url(:medium) %>

<p>
  <strong>Belongs To The Following Packages:</strong>
	<% for package in @item.packages %>
	  <li><%= package.name %></li>
	<% end %>

</p>
<p>
  <strong>Make:</strong>
  <%= @item.make %>
</p>
<p>
  <strong>Model:</strong>
  <%= @item.model %>
</p>
<p>
  <strong>Barcode:</strong>
  <%= @item.barcode %>
</p>
<p>
  <strong>Serial:</strong>
  <%= @item.serial %>
</p>
<p>
  <strong>Checked Out By:</strong>
  <%= @item.checked_out_by %>
</p>
<p>
  <strong>Price:</strong>
  $<%= @item.price %>
</p>
<p>
  <strong>Condition:</strong>
  <%= @item.condition %>
</p>
<p>
  <strong>Last Serviced:</strong>
  <%= @item.last_serviced.strftime("%B %Y") %>
</p>
<p>
  <strong>Next Service:</strong>
  <%= @item.next_service.strftime("%B %Y") %>
</p>

<p>
  <%= link_to "Edit", edit_item_path(@item) %> |
  <%= link_to "Destroy", @item, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", items_path %>
</p>
